FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    p
    {
        solver           GAMG;
        tolerance        1e-6; //switch to 1e-8 for LES
        relTol           0.01; //switch to 0 for LES 
        smoother         GaussSeidel;
        nPreSweeps       0;
        nPostSweeps      2;
        cacheAgglomeration on;
        agglomerator     faceAreaPair;
        nCellsInCoarsestLevel 100;
        mergeLevels      1;
	    minIter		 3;
    }

    pFinal
    {
	    $p;
        tolerance        1e-6;
	    relTol		 0;
	    minIter		 1;
    }

    U
    {
        solver          PBiCGStab;
        preconditioner  DILU;
        tolerance       1e-08;
        relTol          0.001; //switch to 0 for LES 
    }

    UFinal
    {
        solver          PBiCGStab;
        preconditioner  DILU;
        tolerance       1e-08;
        relTol          0;
	    minIter		1;
    }
    
    k
    {
        //solver          smoothSolver;
        //smoother 	  GaussSeidel;

        solver          PBiCGStab;
        preconditioner  DILU;
    	tolerance       1e-08;
        relTol          0.001; 
    }

    omega
    {
        //solver          smoothSolver;
        //smoother 	  GaussSeidel;
     
	    solver          PBiCGStab;
        preconditioner  DILU;
    	tolerance       1e-08;
        relTol          0.001;
    }
}

SIMPLE
{
    nNonOrthogonalCorrectors 2;
    pRefCell        0;
    pRefValue       0;

    consistent on;

    residualControl
    {
        p               1e-4;
        U               1e-4;
        nuTilda         1e-4;
        k               1e-4;
        omega           1e-4;
    }
}

relaxationFactors
{
    fields
    {
        p               0.7;
    }
    equations
    {
        p               0.7;
        U               0.7;
        k               0.7;
        omega           0.7;
    }
}


