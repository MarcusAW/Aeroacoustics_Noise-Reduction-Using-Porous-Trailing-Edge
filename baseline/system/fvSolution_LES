FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    p
    {
        solver           GAMG;
        tolerance        1e-8;
        relTol           0; //switch to 0 for LES after certain time
        smoother         GaussSeidel;
        nPreSweeps       0;
        nPostSweeps      2;
        cacheAgglomeration on;
        agglomerator     faceAreaPair;
        nCellsInCoarsestLevel 100;
        mergeLevels      1;
	    minIter		     3;
    }

    pFinal
    {
	    $p;
        tolerance        1e-6;
	    relTol		 0;
	    minIter		 1;
    }

    U
    {
        solver          PBiCGStab;
        preconditioner  DILU;
        tolerance       1e-08;
        relTol          0.0;
    }

    UFinal
    {
        solver          PBiCGStab;
        preconditioner  DILU;
        tolerance       1e-08;
        relTol          0;
	    minIter		1;
    }
    
    k
    {
        solver          PBiCGStab;
        preconditioner  DILU;
	    tolerance       1e-08;
        relTol          0.0001; //0 after awhile
    }

    omega
    {
	    solver          PBiCGStab;
        preconditioner  DILU;
	    tolerance       1e-08;
        relTol          0.0001; //0 after awhile
    }
}


PIMPLE
{
    momentumPredictor yes;
    nOuterCorrectors 1;
    nCorrectors     3;
    nNonOrthogonalCorrectors 1;
    transonic       no;
    consistent      no;
}

relaxationFactors
{
    nuTilda         1;
    U               1;
    p               1;
    ".*Final"        1.0;
}


